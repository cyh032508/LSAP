FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# -----------------------------------------------------
# Install Python 3.10 + tools
# -----------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-pip python3-venv python3-distutils \
    curl build-essential \
    && rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------
# Install Poetry
# -----------------------------------------------------
ENV POETRY_HOME="/opt/poetry"
ENV PATH="$POETRY_HOME/bin:$PATH"
RUN curl -sSL https://install.python-poetry.org | python3 -

ENV POETRY_VIRTUALENVS_IN_PROJECT=true
ENV POETRY_NO_INTERACTION=1
ENV POETRY_CACHE_DIR='/tmp/poetry-cache'

WORKDIR /app

# -----------------------------------------------------
# Copy pyproject files
# -----------------------------------------------------
COPY backend/pyproject.toml backend/poetry.lock /app/backend/
COPY frontend/pyproject.toml frontend/poetry.lock /app/frontend/

# -----------------------------------------------------
# Override requires-python (Ubuntu uses py3.10)
# Backend can use >=3.10
# Frontend must respect <3.14 (due to dspy)
# -----------------------------------------------------
RUN sed -i 's/requires-python *= *.*/requires-python = ">=3.10"/' /app/backend/pyproject.toml
RUN sed -i 's/requires-python *= *.*/requires-python = ">=3.10,<3.14"/' /app/frontend/pyproject.toml

# -----------------------------------------------------
# Backend dependency install
# -----------------------------------------------------
WORKDIR /app/backend
RUN poetry lock
RUN poetry install --no-root

# CPU-only PyTorch (避免 CUDA，超省空間)
RUN pip install --no-cache-dir \
    torch==2.5.1 \
    --index-url https://download.pytorch.org/whl/cpu
# -----------------------------------------------------
# Frontend dependency install
# -----------------------------------------------------
WORKDIR /app/frontend
RUN poetry lock
RUN poetry install --no-root

# -----------------------------------------------------
# Copy source code
# -----------------------------------------------------
WORKDIR /app
COPY backend /app/backend
COPY frontend /app/frontend
COPY entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

EXPOSE 8000
EXPOSE 8501

CMD ["/app/entrypoint.sh"]
